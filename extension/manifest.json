{
    "manifest_version": 3,
    "name": "Urchive",
    "version": "1.0",
    "description": "Extension for Urchive",
    "permissions": ["activeTab", "downloads", "storage", "scripting"],
    "host_permissions": ["<all_urls>"],
    "icons": {
        "16": "icons/icon48.png",
        "32": "icons/icon64.png",
        "48": "icons/icon96.png",
        "128": "icons/icon256.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icons/icon96.png"
    },
    "content_scripts": [
        {
            "matches": ["https://*/*", "http://*/*"],
            "js": ["content-scripts/content.js", "content-scripts/node-capture.js"]
        }
    ]
}
